<div class="container my-4 " style="padding-left: 0px;padding-right: 0px;">
  
  <div class="my-2">
    <strong>折價卷序號:</strong>
    <%= @coupon.serial %>
  </div>
  
  <div class="my-2">
    <strong>折價卷標題:</strong>
    <%= @coupon.title %>
  </div>
  
  <div class="my-2">
    <strong>折價卷描述:</strong>
    <%= @coupon.discount_description %>
  </div>
  
  <div class="my-2">
    <strong>折扣金額:</strong>
    <%= @coupon.discount %>
  </div>
  
  <div class="my-2">
    <strong>折價卷狀態:</strong>
    <%= @coupon.status ? "已使用" : "未使用" %>
  </div>
  
  <%= link_to '編輯', edit_coupon_path(@coupon) %> |
  <%= link_to '返回', coupons_path %>
</div>
