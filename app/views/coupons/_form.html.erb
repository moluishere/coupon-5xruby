  </div>

  <div class="field">
    <%= form.label :discount, '折扣金額', class: "form-label" %>
    <%= form.number_field :discount , class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit '新增', class: "btn btn-primary" %>
  </div>
