<h1>書店商品</h1>

<table>
  <thead>
    <tr>
      <%# <th>書名</th> %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
         <td> <%= link_to '結帳' %></td>
        <td><%#= link_to 'Show', book %></td>
        <td><%#= link_to 'Edit', edit_book_path(book) %></td>
        <td><%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

