  <div class="field">
    <%= form.label :title, '折價卷標題', class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :discount_description, '折價卷ㄋ敘述', class: "form-label" %>
