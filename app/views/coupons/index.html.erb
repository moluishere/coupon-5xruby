<p id="notice"><%= notice %></p>

<h1>折價卷</h1>

<table>
  <thead>
    <tr>
      <th>序號</th>
      <th>名稱</th>
      <th>使用規則</th>
      <th>折扣金額</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.serial %></td>
        <td><%= coupon.title %></td>
        <td><%= coupon.discount_description %></td>
        <td><%= coupon.discount %></td>
        <td><%#= link_to 'Show', coupon %></td>
        <td><%= link_to '編輯', edit_coupon_path(coupon) %></td>
        <td><%= link_to '刪除', coupon, method: :delete, data: { confirm: '你確定要刪除嗎?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="title_link"><%= link_to '新增折價卷', new_coupon_path %></div>
