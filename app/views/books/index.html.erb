<h1>書店商品</h1>

<table>
  <thead>
    <tr>
      <th>書名</th>
      <th>價格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
      <% if current_user.admin?%>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td ><%= link_to '結帳' %></td>
        <%#= link_to '詳細資料', book, class: "admin_link" %>
        <td><%= link_to '編輯', edit_book_path(book), class: "admin_link" %></td>
        <td><%= link_to '刪除', book, method: :delete, data: { confirm: '確定要刪除嗎?' }, class: "admin_link" %></td>
      </tr>
      <% else %>
        <td><%= book.title %></td>
        <td><%= book.price %></td>
        <td> <%= link_to '結帳' %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

  <% if current_user.admin?%>
  <div class="title_link"><%= link_to '新增商品', new_book_path, class: "admin_link" %></div>
  <% end %>

  <div class="title_link"><%= link_to '回到首頁', root_path %><div>
